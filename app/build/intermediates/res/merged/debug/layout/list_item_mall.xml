<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="@dimen/explorer_mall_item_height"
    android:layout_marginStart="@dimen/half_normal_margin"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/small_margin"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/half_normal_margin"
        android:paddingEnd="@dimen/half_normal_margin"
        android:paddingStart="@dimen/half_normal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mall_logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/dummy_mall" />

            <ImageView
                android:id="@+id/iv_mall_cover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/dummy_mall_cover" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mall_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="#23PaskalMall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/ll_parking"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/explorer_mall_button_height"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@drawable/bg_parking_mall"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/small_margin">

                <TextView
                    android:id="@+id/tv_parking_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_marginStart="@dimen/small_margin"
                    android:text="|"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parking"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/explorer_mall_button_height"
                android:background="@drawable/bg_button_follow_mall"
                android:orientation="horizontal"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_follower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/half_normal_margin"
                android:text="+175" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>