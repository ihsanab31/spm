<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/small_margin"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/half_normal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/deals_item_image_height"
            android:background="#F2F3F5">

            <ImageView
                android:id="@+id/iv_deals_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/dummy_deals" />

            <TextView
                android:id="@+id/tv_deals_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/half_normal_margin"
                android:background="@drawable/bg_deals_badge"
                android:paddingBottom="@dimen/small_margin"
                android:paddingEnd="@dimen/normal_margin"
                android:paddingStart="@dimen/normal_margin"
                android:paddingTop="@dimen/small_margin"
                android:text="50%"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/iv_beacon_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/half_normal_margin"
                android:layout_marginStart="@dimen/half_normal_margin"
                android:layout_marginTop="@dimen/half_normal_margin"
                android:src="@drawable/ic_wifi"
                android:tint="@color/colorPrimary"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/half_normal_margin"
            android:layout_marginStart="@dimen/half_normal_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_deals_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/half_normal_margin"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:text="Jaket Kulit Hitam"
                android:textSize="@dimen/font_size" />

            <TextView
                android:id="@+id/tv_deals_provider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="start"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:text="Uniqlo +157"
                android:textSize="@dimen/small_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_deals_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/half_normal_margin"
                android:layout_marginStart="@dimen/half_normal_margin"
                android:layout_weight="1"
                android:text="IDR.500.000"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_deals_disc_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/half_normal_margin"
                android:layout_marginStart="@dimen/half_normal_margin"
                android:layout_weight="1"
                android:text="IDR.250.000"
                android:textColor="@color/google_red"
                android:textSize="@dimen/small_font_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>