<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/membercard"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="30dp">
        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ihsan abdurahman"
            android:textColor="@color/com_facebook_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:font="consolas"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:id="@+id/tv_data_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_data"
            android:layout_centerVertical="true"
            android:text="ihsan abdurahman"
            android:textColor="@color/emas"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            app:font="consolas" />
    </LinearLayout>
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="6"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.bottlerocketstudios.barcode.generation.ui.BarcodeView
            android:id="@+id/bv_data"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:barcode_format="codabar"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
</LinearLayout>